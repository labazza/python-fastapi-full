[Unit]
Description=demo fastapi application
After=network.target

[Service]
User=sanjeev
Group=sanjeev
WorkingDirectory=~/app/src/
Environment="PATH=~/app/venv/bin"
EnvironmentFile=~/.env
ExecStart=~/app/venv/bin/gunicorn -w 4 -k uvicorn.workers.UvicornWorker app.main:app --bind 0.0.0.0:8000

[Install]
WantedBy=multi-user.target